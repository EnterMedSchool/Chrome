{
  "manifest_version": 3,
  "name": "EMS Anki Glossary Popups",
  "version": "3.0.0",
  "description": "Glossary popups with multi-pin windows, quick palette (Ctrl/Cmd+K), tag filters, per\u2011site toggle, lightbox, and tag\u2011colored highlights.",
  "permissions": [
    "storage",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.github.com/repos/EnterMedSchool/Anki/*",
    "https://raw.githubusercontent.com/EnterMedSchool/Anki/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "EMS Glossary",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "all_frames": true,
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}